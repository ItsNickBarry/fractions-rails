<select class="authorization-type" name="government_authorization[authorization_type]">
  <% _.each(authorizer.governmentAuthorizationTypes(), function (type) { %>
    <option value="<%= type %>"><%= type %></option>
  <% }); %>
</select>
<select class="authorizee-type" name="government_authorization[authorizee_type]">
  <option value="Electorate">Electorate</option>
  <option value="Position">Position</option>
</select>

<div class="search">
  <input type="text" name="government_authorization[authorizee_name]" placeholder="authorizee name" onfocus="Fractions.authorizeeSearch(event)">
</div>
