<h2>New Character</h2>
<form>
  <div class="row">
    <label for="character-name-input">Name</label>
    <input id="character-name-input" type="text" name="character[name]">
    <label>Radio Buttons</label>
    <label for="character-gender-input-f">Female</label>
    <input id="character-gender-input-f" type="radio" name="character[gender]" value="F">
    <label for="character-gender-input-m">Male</label>
    <input id="character-gender-input-m" type="radio" name="character[gender]" value="M">
  </div>
  <input class="button-primary" value="Submit" type="submit">
</form>
